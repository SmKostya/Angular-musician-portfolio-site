mixin event(imageSrc,dateTime, place, price, description)
    .oneEvent(style="background-image: url(" + imageSrc + ")")
        .infoLine
            span.name Дата и время
            span.val= dateTime
        .infoLine
            span.name Место
            span.val= place
        .infoLine
            span.name Цена
            span.val= price
        .description
            span.val= description     

